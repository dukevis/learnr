#Run this script before copying any other script.  This script installs all
#the packages that are used in this tutorial...you will load the library
#in the script that you use, but you must first install the package.

if(!require(raster)) install.packages("raster")
if(!require(sp)) install.packages("sp")
if(!require(leaflet)) install.packages("leaflet")
if(!require(rgdal)) install.packages("rgdal")
if(!require(shiny)) install.packages("shiny")
if(!require(ggmap)) install.packages("ggmap")
if(!require(jsonlite)) install.packages("jsonlite")
if(!require(rgeos)) install.packages("rgeos")
if(!require(geojsonio)) install.packages("geojsonio")
if(!require(RColorBrewer)) install.packages("RColorBrewer")
if(!require(maptools)) install.packages("maptools")
